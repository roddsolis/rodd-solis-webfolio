{
  "source": ["src/tokens/color.tokens.json", "src/tokens/radius.tokens.json", "src/tokens/scale-rule.tokens.json", "src/tokens/padding.tokens.json", "src/tokens/spacing.tokens.json", "src/tokens/border.tokens.json", "src/tokens/shadow.tokens.json"],
  "platforms": {
    "web": {
      "transformGroup": "web",
      "buildPath": "src/variables/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "src/variables/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
